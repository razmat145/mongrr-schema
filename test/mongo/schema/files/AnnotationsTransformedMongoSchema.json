[
    {
        "collectionName": "MyUsers",
        "schema": {
            "bsonType": "object",
            "title": "User",
            "properties": {
                "id": {
                    "bsonType": "string"
                },
                "name": {
                    "bsonType": "string",
                    "minLength": 6
                },
                "phone": {
                    "bsonType": "array",
                    "items": {
                        "bsonType": "string"
                    }
                },
                "address": {
                    "bsonType": "string",
                    "maxLength": 50
                },
                "active": {
                    "bsonType": "bool"
                },
                "age": {
                    "bsonType": "int",
                    "minimum": 18
                },
                "balance": {
                    "bsonType": "double"
                }
            },
            "required": [
                "id",
                "name",
                "address",
                "active",
                "age",
                "balance"
            ]
        },
        "indexes": [
            {
                "name": "MyUsers_name",
                "index": [
                    {
                        "property": "name",
                        "direction": "asc"
                    }
                ]
            },
            {
                "name": "MyUsers_active",
                "index": [
                    {
                        "property": "active",
                        "direction": "desc"
                    }
                ]
            },
            {
                "name": "MyUsers_name_address",
                "index": [
                    {
                        "property": "name",
                        "direction": "asc"
                    },
                    {
                        "property": "address",
                        "direction": "desc"
                    }
                ]
            }
        ]
    }
]